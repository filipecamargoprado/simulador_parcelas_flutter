<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Splash screen do Android -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <!-- Tema principal da Jufap -->
    <style name="Theme.Jufap" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#2B2E83</item>
        <item name="colorPrimaryVariant">#1F2166</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <item name="colorSecondary">#E30613</item>
        <item name="colorSecondaryVariant">#B3020F</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <item name="android:windowBackground">#F5F5F5</item>
        <item name="android:textColor">#212121</item>
    </style>

    <!-- Tema de fallback usado durante a inicialização -->
    <style name="NormalTheme" parent="Theme.Jufap" />

</resources>